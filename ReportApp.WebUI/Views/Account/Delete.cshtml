﻿@model ReportApp.WebUI.Models.UserDetailsViewModel

@{
    ViewBag.Title = "Usuń";
}

<h1 class="title">Usuwanie uzytkownika</h1>

<h3>Jesteś pewny, że chcesz usunąc tego użytkownika z bazy ?</h3>
<div>
    <h4>Potwierdzenie usunięcia użytkownika</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => Model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nr_grupy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nr_grupy)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Nr_stanowiska)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nr_stanowiska)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailConfirmed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserRoles)
        </dt>

        <dd>
            @Html.ListBoxFor(model => model.UserRoles, Model.Roles);
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do lity użytkowników", "ShowUsers")
        </div>
    }
</div>